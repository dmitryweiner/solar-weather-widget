<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Display Options Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_display_options"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/checkbox_show_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_show_title"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="true"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_show_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_show_info"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="true"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Data Source Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_data_source"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radio_group_data_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/radio_kp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_source_kp"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:checked="true"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/radio_proton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_source_proton"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/radio_xray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_source_xray"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:padding="8dp"/>

        </RadioGroup>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/button_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
